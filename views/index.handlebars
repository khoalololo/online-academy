<main class="container mx-auto px-4 py-8 md:py-12 max-w-7xl w-full">
    <div class="space-y-12">
        
        <section class="bg-white p-8 md:p-12 rounded-xl shadow-2xl border border-gray-100">
            </section>

        <hr class="border-gray-200">

        <section class="space-y-6">
            <h2 class="text-3xl font-extrabold text-indigo-700">üèÜ Weekly Highlights</h2>
            <p class="text-gray-600">The top 4 most popular courses registered this week. Don't miss out!</p>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {{#each featured}}
                <a href="/products/{{this.proid}}" class="group block bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-yellow-300">
                    <div class="h-24 bg-yellow-100 flex items-center justify-center p-3">
                        <span class="text-xl font-bold text-yellow-800 text-center">{{this.proname}}</span>
                    </div>
                    <div class="p-4">
                        <p class="text-sm text-gray-600 mb-2">{{this.tinydes}}</p>
                        <p class="text-xl font-extrabold text-red-600">${{formatNumber this.price}}</p>
                        {{#if this.promo_price}}<span class="text-sm text-gray-500 line-through">${{formatNumber this.promo_price}}</span>{{/if}}
                    </div>
                </a>
                {{/each}}
            </div>
        </section>

        <hr class="border-gray-200">

        <section class="space-y-6">
            <h2 class="text-3xl font-extrabold text-indigo-700">üî• Most Viewed Courses</h2>
            
            <div class="flex space-x-6 overflow-x-auto pb-4 custom-scrollbar">
                {{#each topViewed}}
                <a href="/products/{{this.proid}}" class="flex-shrink-0 w-72 bg-white rounded-xl shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300">
                    <img class="w-full h-36 object-cover rounded-t-xl" src="https://picsum.photos/400/200?random={{this.proid}}" alt="{{this.proname}}">
                    <div class="p-4">
                        <h3 class="text-lg font-bold text-gray-800 truncate">{{this.proname}}</h3>
                        <p class="text-md font-extrabold text-green-600 mt-1">${{formatNumber this.price}}</p>
                        <p class="text-sm text-gray-500 mt-2">Views: {{formatNumber this.views}}</p>
                    </div>
                </a>
                {{/each}}
            </div>
        </section>

        <hr class="border-gray-200">

        <section class="space-y-6">
            <h2 class="text-3xl font-extrabold text-indigo-700">‚ú® New Arrivals</h2>
            
            <div class="flex space-x-6 overflow-x-auto pb-4 custom-scrollbar">
                {{#each newest}}
                <a href="/products/{{this.proid}}" class="flex-shrink-0 w-72 bg-white rounded-xl shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300">
                    <img class="w-full h-36 object-cover rounded-t-xl" src="https://picsum.photos/400/200?random={{this.proid}}" alt="{{this.proname}}">
                    <div class="p-4">
                        <h3 class="text-lg font-bold text-gray-800 truncate">{{this.proname}}</h3>
                        <p class="text-sm text-gray-500 mt-2">Recently added</p>
                        <p class="text-md font-extrabold text-green-600 mt-1">${{formatNumber this.price}}</p>
                    </div>
                </a>
                {{/each}}
            </div>
        </section>

        <hr class="border-gray-200">

        <section class="space-y-6">
            <h2 class="text-3xl font-extrabold text-indigo-700">üìö Popular Topics</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                {{#each popularTopics}}
                <a href="/products/list?catid={{this.id}}" class="block p-5 bg-white rounded-lg shadow-md hover:bg-indigo-50 transition-colors duration-300 border-l-4 border-indigo-500">
                    <h3 class="text-xl font-bold text-gray-800">{{this.name}}</h3>
                    <p class="text-sm text-gray-600 mt-1">{{this.course_count}} courses available</p>
                </a>
                {{/each}}
            </div>
        </section>
        
        <section class="mt-16 text-center">
            </section>

    </div>
</main>