<main class="container mx-auto px-4 py-8 md:py-12 max-w-7xl w-full">
    <div class="space-y-12">
        
        <section class="bg-white p-8 md:p-12 rounded-xl shadow-2xl border border-gray-100">
            <div class="text-center">
                {{#if isAuthenticated}}
                    <p class="text-sm font-semibold text-green-600 uppercase tracking-widest mb-2">Welcome Back to the Academy!</p>
                    <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight">
                        Hello, <span class="text-indigo-600">{{authUser.name}}</span>! ðŸ‘‹
                    </h2>
                    <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
                        Your learning journey continues. Jump back into your enrolled courses or browse new topics.
                    </p>
                    <div class="mt-6 flex justify-center space-x-4">
                         <a href="/student/enrolled" class="inline-block px-8 py-3 bg-green-600 text-white font-bold rounded-lg shadow-lg hover:bg-green-700 transition-transform transform hover:scale-105">
                            My Courses
                        </a>
                        <a href="/products" class="inline-block px-8 py-3 border border-indigo-600 text-indigo-700 font-semibold rounded-lg hover:bg-indigo-50 transition-colors">
                            Browse All
                        </a>
                    </div>
                {{else}}
                    <h1 class="text-4xl md:text-5xl font-extrabold text-indigo-700 leading-tight">
                        Online Academy
                    </h1>
                    <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
                        Learn the skills you need for tomorrow. Start your journey today!
                    </p>
                    <div class="mt-6 flex justify-center space-x-4">
                        <a href="/account/signup" class="inline-block px-8 py-3 bg-indigo-600 text-white font-bold rounded-lg shadow-lg hover:bg-indigo-700 transition-transform transform hover:scale-105">
                            Sign Up & Start Learning
                        </a>
                    </div>
                {{/if}}
            </div>
        </section>

        <hr class="border-gray-200">

        <section class="space-y-12">
            <h2 class="text-3xl font-bold text-gray-800">Featured Courses & Insights</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="bg-white p-5 rounded-lg shadow-md border-t-4 border-yellow-500">
                    <h3 class="font-bold text-lg mb-1">Weekly Highlights</h3>
                    <p class="text-sm text-gray-600">Placeholder for Top 4 Featured Courses</p>
                </div>
                <div class="bg-white p-5 rounded-lg shadow-md border-t-4 border-yellow-500">
                    <h3 class="font-bold text-lg mb-1">Most Viewed</h3>
                    <p class="text-sm text-gray-600">Placeholder for Top 10 Viewed Courses</p>
                </div>
                <div class="bg-white p-5 rounded-lg shadow-md border-t-4 border-yellow-500">
                    <h3 class="font-bold text-lg mb-1">New Arrivals</h3>
                    <p class="text-sm text-gray-600">Placeholder for Top 10 Newest Courses</p>
                </div>
                <div class="bg-white p-5 rounded-lg shadow-md border-t-4 border-yellow-500">
                    <h3 class="font-bold text-lg mb-1">Popular Topics</h3>
                    <p class="text-sm text-gray-600">Placeholder for Most Registered Categories</p>
                </div>
            </div>
            
            <hr class="border-gray-200">

            <div class="text-center">
                <h3 class="text-2xl font-bold text-indigo-700 mb-4">Ready to Dive In?</h3>
                <p class="text-gray-600 max-w-xl mx-auto mb-6">Start exploring our entire catalog across IT, Business, and Design.</p>
                <a href="/products/byCat?id=100"
                    class="inline-block px-8 py-3 bg-indigo-700 text-white font-bold rounded-lg shadow-lg hover:bg-indigo-800 transition-transform transform hover:scale-105">
                    Browse All Categories
                </a>
            </div>
        </section>
    </div>
</main>