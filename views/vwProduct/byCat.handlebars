<main class="container mx-auto px-4 py-8 md:py-12 max-w-7xl w-full">
    <div class="space-y-8">
        
        <section class="text-center bg-white p-8 rounded-xl shadow-lg border border-gray-100">
            <h1 class="text-4xl font-extrabold text-indigo-700">
                {{categoryName}}
            </h1>
            <p class="mt-2 text-lg text-gray-600">
                Browse through our collection of courses in this category.
            </p>
        </section>

        {{#if courses.length}}
        <section class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {{#each courses}}
                <div class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-200">
                    <div class="relative h-40 flex items-center justify-center">
                        <img src="{{#if this.thumbnail}}{{this.thumbnail}}{{else}}/static/images/default-course.png{{/if}}"
                             alt="{{this.proname}}" 
                             class="w-full h-full object-cover rounded-t-xl">
                        <!-- Status Badge -->
                        <div class="absolute top-3 right-3 flex flex-col gap-2 items-end">
                            {{#if this.is_completed}}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-green-500 text-white shadow-lg">
                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                    Complete
                                </span>
                            {{else}}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-yellow-500 text-white shadow-lg">
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    Incomplete
                                </span>
                            {{/if}}

                            {{#if this.is_disabled}}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-red-500 text-white shadow-lg">
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                    </svg>
                                    Disabled
                                </span>
                            {{/if}}
                        </div>
                    </div>
                    <a href="/products/{{this.proid}}" class="block p-5">
                        <span class="inline-block bg-indigo-100 text-indigo-800 text-xs font-semibold mb-2 px-2.5 py-0.5 rounded-full">
                            {{this.category_name}}
                        </span>
                        <h3 class="text-xl font-bold text-gray-800 truncate group-hover:text-indigo-600 transition-colors">{{this.proname}}</h3>
                        <p class="text-sm text-gray-500 mt-1">By {{this.instructor_name}}</p>
                        
                        <div class="flex items-center mt-3">
                            <div class="flex items-center">
                                {{{stars this.average_rating}}}
                            </div>
                            <span class="ml-2 text-sm text-gray-600">({{formatNumber (or this.rating_count 0)}} reviews)</span>
                        </div>

                        <div class="mt-4 flex items-baseline justify-between">
                            {{#if this.promo_price}}
                                <div>
                                    <span class="text-2xl font-extrabold text-red-600">${{formatNumber this.promo_price}}</span>
                                    <span class="ml-2 text-gray-500 line-through">${{formatNumber this.price}}</span>
                                </div>
                            {{else}}
                                <span class="text-2xl font-extrabold text-green-600">${{formatNumber this.price}}</span>
                            {{/if}}
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </section>

        <section class="flex justify-center pt-8">
            {{#if (gt pagination.totalPages 1)}}
            <nav aria-label="Page navigation" class="mt-10 flex justify-center">
                <ul class="inline-flex items-center space-x-2">
                    <!-- Previous Button -->
                    <li>
                        <a 
                            class="px-3 py-2 rounded-lg border text-md font-medium 
                                {{#if (gt pagination.page 1)}}
                                    text-indigo-700 bg-white hover:bg-gray-100 active:bg-gray-200 border-gray-300
                                {{else}}
                                    text-gray-400 bg-gray-100 border-gray-200 cursor-not-allowed
                                {{/if}}"
                            {{#if (gt pagination.page 1)}}href="{{#if catId}}?catid={{catId}}&page={{sub pagination.page 1}}{{else}}?page={{sub pagination.page 1}}{{/if}}"{{else}}href="#"{{/if}}>
                            ‹ Prev
                        </a>
                    </li>
                    <!-- Page Numbers -->
                    {{#each pagination.pageNumbers}}
                    <li>
                        <a 
                            class="px-3 py-2 rounded-lg border text-md font-medium 
                                {{#if this.isCurrent}}
                                    bg-indigo-600 text-white border-indigo-600
                                {{else}}
                                    text-indigo-700 bg-white hover:bg-gray-100 active:bg-gray-200 border-gray-300
                                {{/if}}"
                            {{#if this.isCurrent}}href="#" aria-current="page"{{else}}href="{{#if ../catId}}?catid={{../catId}}&page={{this.value}}{{else}}?page={{this.value}}{{/if}}"{{/if}}>
                            {{this.value}}
                        </a>
                    </li>
                    {{/each}}
                    <!-- Next Button -->
                    <li>
                        <a 
                            class="px-3 py-2 rounded-lg border text-md font-medium 
                                {{#if (lt pagination.page pagination.totalPages)}}
                                    text-indigo-700 bg-white hover:bg-gray-100 active:bg-gray-200 border-gray-300
                                {{else}}
                                    text-gray-400 bg-gray-100 border-gray-200 cursor-not-allowed
                                {{/if}}"
                            {{#if (lt pagination.page pagination.totalPages)}}href="{{#if catId}}?catid={{catId}}&page={{add pagination.page 1}}{{else}}?page={{add pagination.page 1}}{{/if}}"{{else}}href="#"{{/if}}>
                            Next ›
                        </a>
                    </li>
                </ul>
            </nav>
            {{/if}}
        </section>
        {{else}}
        <section class="text-center py-16">
            <p class="text-xl text-gray-500">No courses found in this category.</p>
        </section>
        {{/if}}

    </div>
</main>
